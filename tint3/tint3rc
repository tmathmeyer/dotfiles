[[bar]]
  fontcolor #ffffff
  background #55000000
  borderwidth 0
  padding 5
  margin 0
  location bottom
  options debug
  left
    desktops
    active
  center
    time
    date
  right
    date
    time
    upload
    download
    weather
    volume
    batteryone
    batterytwo

[active]
  id active
  source window_title

# %N -> Name of the desktop
[desktops]
  id workspace
  format %N
  current HIGHLIGHT|UNDERLINE




# split time and date, looks better on a dual monitor system
[time]
  id clock
  timeout 5
  format %T

[date]
  id clock
  format %a - %d

[spacer]
  id text
  source |

[weather]
  id weather
  format %W, â–‰%F (%H)
  source Seattle,usa

[download]
  id graph
  source network wlp3s0 down
  forground #D58D6B

[upload]
  id graph
  source network wlp3s0 up
  shell dmenu_run
  forground #748DA6

#dual battery system (x240)
[batteryone]
  id scale
  source battery BAT1
  high_font #00FF00
  med_font #FF0000
  low_font #222222
  low_color #FF0000

[batterytwo]
  id scale
  source battery BAT0
  high_font #00FF00
  med_font #FF0000
  low_font #222222
  low_color #FF0000

[volume]
  id scale
  source alsa 0 Master
  shell amixer set Master toggle

